<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_add_method_of_payment" model="ir.ui.view">
        <field name="name">account.payment.add.method.of.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='amount']" position="before">
        	   <field name="ad_line_total" invisible="1"/>
        	</xpath>
			<xpath expr="//field[@name='amount']" position="attributes">
        	   <attribute name="readonly">1</attribute>
        	   <attribute name="force_save">1</attribute>
        	</xpath>
			<xpath expr='//sheet' position="inside">
				<separator string="Invoices" attrs="{'invisible': ['|',('payment_type', 'not in', ['inbound', 'outbound']), ('partner_type', 'not in', ['customer', 'supplier'])]}"/>
				<field name="ad_line_ids" attrs="{'invisible': ['|',('payment_type', 'not in', ['inbound', 'outbound']), ('partner_type', 'not in', ['customer', 'supplier'])]}">
					<tree editable="bottom" create="false">
						<field name="invoice_id" readonly="1" force_save="1"/>
						<field name="date_invoice"/>
						<field name="date_due"/>
						<field name="untax_amount"/>
						<field name="tax_amount"/>
						<field name="amount_total"/>
						<field name="residual"/>
						<field name="reconcile_amount" attrs="{'readonly': [('payment_state', '!=', 'draft')]}"/>
						<field name="pay_amount" />
						<field name="currency_id" invisible="1"/>
						<field name="payment_state" invisible="1"/>
					</tree>
				</field>
			</xpath>
        </field>
    </record>
</odoo>
